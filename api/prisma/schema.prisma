generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  cpf         String        @unique
  password    String
  QuizAttempt QuizAttempt[]
}

model Quiz {
  id        Int           @id @default(autoincrement())
  type      Int
  questions Question[]
  attempts  QuizAttempt[]
}

model Question {
  id           Int    @id @default(autoincrement())
  quizId       Int
  title        String
  alternatives String
  Quiz         Quiz   @relation(fields: [quizId], references: [id])
}

model QuizAttempt {
  id        Int      @id @default(autoincrement())
  userId    Int
  quizId    Int
  status    Int
  createdAt DateTime @default(now())
  Quiz      Quiz     @relation(fields: [quizId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
}
